---
const title = "Formacion";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title={title}>
  <section
    id="formacion"
    class="pt-[19vh] px-0 bg-gray-200 text-center flex flex-col items-center w-full h-[100vh] justify-start"
  >
    <h2 class="text-4xl text-primary relative mb-5 group hover:text-primary">
      Formación
      <span
        class="absolute bottom-[-5px] left-1/2 w-0 h-[2px] bg-secondary group-hover:w-full group-hover:left-0 transition-all ease-in-out duration-400"
      ></span>
    </h2>

    <div class="flex flex-col gap-5">
      <ul class="list-none p-0">
        <li
          class="flex flex-col items-center justify-center gap-2 text-lg text-[#34495e] mb-5 md:gap-4 md:mb-5 flex-col"
        >
          <span
            class="icon-[lsicon--education-outline]"
            role="img"
            aria-hidden="true"></span>
          <span class="font-bold"
            >Técnico en Programación - Bachillerato Tecnológico en Programación</span
          >
          <span class="italic">CECYTEM CHIMALHUACAN II,</span> Chimalhuacán, Estado
          de México (2017-2020)
        </li>

        <li
          class="flex flex-col items-center justify-center gap-2 text-lg text-[#34495e] mb-5 md:gap-4 md:mb-5 flex-col"
        >
          <span class="icon-[si-glyph--code]" role="img" aria-hidden="true"
          ></span>
          <span class="font-bold"
            >Desarrollador Front-End Jr - Estudiante ONE (G6) - Oracle Next
            Education</span
          >
          <span class="italic">Alura Latam</span> Remoto (Enero 2024 - Julio 2024)
        </li>
      </ul>
    </div>
  </section>
</MainLayout>

---
const title = "Contacto";
import Titulo from "../components/Titulo.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title={title}>
  <div
    class="pt-[10vh] px-4 bg-gray-200 text-center flex flex-col items-center w-full h-[100vh] justify-start space-y-4"
  >
    <Titulo text="Contacto" />

    <p class="text-lg mb-4">
      Correo electrónico: 
      <a 
        href="mailto:ivangtx19@gmail.com" 
        class="text-blue-600 hover:text-blue-800" 
        aria-label="Enviar correo a ivangtx19@gmail.com"
      >
        ivangtx19@gmail.com
      </a>
    </p>
    <span class="text-sm text-gray-600">(Disponible para consultas o colaboraciones)</span>

    <p class="text-lg mb-4">
      Número de teléfono: 
      <span class="text-blue-600 hover:text-blue-800" aria-label="Llamar al número +52 5650853599">
        +52 5650853599
      </span>
    </p>
    <span class="text-sm text-gray-600">(Disponible para WhatsApp)</span>
    
  </div>
</MainLayout>

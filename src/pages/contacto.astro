---
const title = "Contacto";
import Titulo from "../components/Titulo.astro";
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title={title}>
  <div
    class="bg-gray-200 sm:h-[100vh] h-[100vh] text-center flex flex-col justify-center items-center gap-12 py-[10vh]"
  >
    <div class="sm:text-base text-[8vw]"><Titulo text="Contacto" /></div>

    <div>
      <p class="mb-4 sm:text-base text-[5vw]">
        Correo electrónico:
        <a
          href="mailto:ivangtx19@gmail.com"
          class="text-blue-600 hover:text-blue-800"
          aria-label="Enviar correo a ivangtx19@gmail.com"
        >
          <p class="mb-4">ivangtx19@gmail.com</p>
        </a>
      </p>
      <span class="text-gray-600 sm:text-base text-[3vw]"
        >(Disponible para consultas o colaboraciones)</span
      >
    </div>

    <div class="flex flex-col">
      <p class="mb-4 sm:text-base text-[5vw]">Número de teléfono:</p>
      <span
        class="text-blue-600 hover:text-blue-800 mb-4"
        aria-label="Llamar al número +52 5650853599"
      >
        +5233620311
      </span>
      <span class="text-gray-600 sm:text-base text-[3vw]"
        >(Disponible para WhatsApp)</span
      >
    </div>
  </div>
</MainLayout>
